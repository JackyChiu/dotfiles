# vi-mode for non-terminal applications

# remap left-control h/j/k/l -> arrow keys
ctrl - h         ![HyperTerm,Terminal,iTerm2]      :   khd -p "- left"
ctrl - j         ![HyperTerm,Terminal,iTerm2]      :   khd -p "- down"
ctrl - k         ![HyperTerm,Terminal,iTerm2]      :   khd -p "- up"
ctrl - l         ![HyperTerm,Terminal,iTerm2]      :   khd -p "- right"

# remap left-control 0 / 4   -> start / end of line
ctrl - 0         ![HyperTerm,Terminal,iTerm2]      :   khd -p "cmd - left"
ctrl - 4         ![HyperTerm,Terminal,iTerm2]      :   khd -p "cmd - right"
# remap left-control g / G   -> start / end of text
ctrl - g         ![HyperTerm,Terminal,iTerm2]      :   khd -p "cmd - up"
ctrl + shift - g ![HyperTerm,Terminal,iTerm2]      :   khd -p "cmd - down"

shift + ctrl - 0 ![HyperTerm,Terminal,iTerm2]      :   khd -p "shift + cmd - left"
shift + ctrl - 4 ![HyperTerm,Terminal,iTerm2]      :   khd -p "shift + cmd - right"

# remap left-control b / e   -> start / end of word
ctrl - b         ![HyperTerm,Terminal,iTerm2]      :   khd -p "alt - left"
ctrl - e         ![HyperTerm,Terminal,iTerm2]      :   khd -p "alt - right"

shift + ctrl - b ![HyperTerm,Terminal,iTerm2]      :   khd -p "shift + alt - left"
shift + ctrl - e ![HyperTerm,Terminal,iTerm2]      :   khd -p "shift + alt - right"

# undo
crtl - u         ![HyperTerm,Terminal,iTerm2]      :   khd -p "cmd - z"

# set border color for different modes
khd mode default  on_enter chunkc border::color 0xdd72bef2 #blue
khd mode focus    on_enter chunkc border::color 0xdddbaa79 #yellow
khd mode swap     on_enter chunkc border::color 0xddd291e4 #purple
khd mode layout   on_enter chunkc border::color 0xddb16286 #red

# toggle between modes
ctrl - s                :   khd -e "mode activate focus"
focus + ctrl - s        :   khd -e "mode activate default"
swap + ctrl - s         :   khd -e "mode activate default"
layout + ctrl - s       :   khd -e "mode activate default"

focus - s               :   khd -e "mode activate swap"
focus - a               :   khd -e "mode activate layout"

layout - a              :   khd -e "mode activate focus"
swap - s                :   khd -e "mode activate focus"

### focus mode ###
focus - r               :   khd -e "reload" # reload config

# focus windows
focus - h               :   chunkc tiling::window --focus west
focus - l               :   chunkc tiling::window --focus east
focus - j               :   chunkc tiling::window --focus south
focus - k               :   chunkc tiling::window --focus north
focus - n               :   chunkc tiling::window --focus next
focus - p               :   chunkc tiling::window --focus prev

# focus monitors
focus - 1               :   chunkc tiling::monitor -f 1
focus - 2               :   chunkc tiling::monitor -f 2

# full screen
focus - f               :   chunkc tiling::window --toggle native-fullscreen

### swap mode ###
# swap windows
swap - h                :   chunkc tiling::window --swap west
swap - j                :   chunkc tiling::window --swap south
swap - k                :   chunkc tiling::window --swap north
swap - l                :   chunkc tiling::window --swap east

swap - r                :   chunkc tiling::desktop --rotate 90

# swap monitors
swap - 1                :   chunkc tiling::window --send-to-monitor 1; chunkc tiling::monitor -f 1
swap - 2                :   chunkc tiling::window --send-to-monitor 2; chunkc tiling::monitor -f 2

# swap desktops
swap + ctrl - 1         :   chunkc tiling::window --send-to-desktop 1; khd -p "cmd + alt - 1"
swap + ctrl - 2         :   chunkc tiling::window --send-to-desktop 2; khd -p "cmd + alt - 2"

### layout mode ###
# switch layout
layout - b               :   chunkc tiling::desktop --layout bsp
layout - m               :   chunkc tiling::desktop --layout monocle
